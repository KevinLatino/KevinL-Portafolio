---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/ui/Badge.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro';
import MailIcon from '../components/icons/Mail.astro';
import SocialPill from '../components/ui/SocialPill.astro';
import Experience from '../components/sections/Experience.astro';
import SectionContainer from '../components/ui/SectionContainer.astro';
import Briefcase from '../components/icons/Briefcase.astro';
import CodeIcon from '../components/icons/Code.astro';
import ProfileCheck from '../components/icons/ProfileCheck.astro';
import Projects from '../components/sections/Projects.astro';
import CommunityImpact from '../components/sections/CommunityImpact.astro';
import AboutMe from '../components/sections/AboutMe.astro';
---

<Layout 
  title="Kevin Latino - Software Developer & Web3 Advocate"
  description="Software Developer and Web3 Advocate from Costa Rica. Specialized in full-stack applications with clean architecture."
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <div class="max-w-xl">
        <div class="flex gap-4 mb-4">
          <img
            class="rounded-full shadow-lg size-28"
            src="/images/KevinLatino.jpeg"
            alt="Kevin Latino photo"
            loading="eager"
            decoding="async"
            width="112"
            height="112"
          />
          <a
            href="mailto:latinokevin9@gmail.com"
            target="_blank"
            rel="noopener"
            class="flex items-center transition md:justify-center md:hover:scale-105"
          >
            <Badge>Available for work</Badge>
          </a>
        </div>
        <h1
          class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
        >
          Hey, I'm Kevin Latino
        </h1>
        <p
          class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
        >
          <strong>Software Developer & Web3 Advocate</strong> from Costa Rica ðŸ‡¨ðŸ‡·.
          Specialized in building full-stack applications with clean architecture and real-world impact.
        </p>
        <nav class="flex flex-wrap gap-4 mt-8">
          <SocialPill href="mailto:latinokevin9@gmail.com">
            <MailIcon class="size-4" />
            Contact me
          </SocialPill>
          <SocialPill href="https://linkedin.com/in/kevinlatino">
            <LinkedInIcon class="size-4" />
            LinkedIn
          </SocialPill>
        </nav>
      </div>
    </SectionContainer>

    <SectionContainer id="experience">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white">
        <Briefcase class="size-8" />
        Work Experience
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="projects">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white">
        <CodeIcon class="size-7" />
        Projects
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="community">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white">
        <CodeIcon class="size-7" />
        Open Source & Community Impact
      </h2>
      <CommunityImpact />
    </SectionContainer>

    <SectionContainer id="about">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white">
        <ProfileCheck class="size-8" />
        About me
      </h2>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
