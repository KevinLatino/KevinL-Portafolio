---
import type { Education } from '@/types';
import { education } from '@/constants/experience';
import ExperienceItem from '@/components/ui/ExperienceItem.astro';
---

<div class="space-y-16">
    <!-- Education -->
    <section>
        <h3 class="text-2xl font-semibold mb-6 text-gray-800 dark:text-white">
            Education
        </h3>
        <ol class="relative">
            {
                education.map((edu: Education) => (
                    <li class="">
                        <ExperienceItem {...edu} />
                    </li>
                ))
            }
        </ol>
    </section>
</div>
