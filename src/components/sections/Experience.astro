---
import type { Experience } from '@/types';
import { experience } from '@/constants/experience';
import ExperienceItem from '@/components/ui/ExperienceItem.astro';

---

<div class="space-y-16">
  <section>
    <h3 class="text-2xl font-semibold mb-6 text-gray-800 dark:text-white">Professional Experience</h3>
    <ol class="relative">
      {
        experience.map((exp: Experience) => (
          <li class="">
            <ExperienceItem {...exp} />
          </li>
        ))
      }
    </ol>
  </section>

</div>
